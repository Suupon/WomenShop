<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="app.controller.CapitalController"
      spacing="30"
      alignment="TOP_LEFT"
      style="-fx-padding: 40;">

    <Label text="Financial Summary" styleClass="page-title"/>

    <HBox spacing="20">

        <VBox styleClass="finance-card">
            <Label text="Sales (Incomes)" styleClass="finance-card-title"/>
            <Label fx:id="labelIncomes" styleClass="finance-value"/>
        </VBox>

        <VBox styleClass="finance-card">
            <Label text="Purchases (Costs)" styleClass="finance-card-title"/>
            <Label fx:id="labelCosts" styleClass="finance-value"/>
        </VBox>

        <VBox styleClass="finance-card">
            <Label text="Stock Value" styleClass="finance-card-title"/>
            <Label fx:id="labelStockValue" styleClass="finance-value"/>
        </VBox>

    </HBox>

    <Separator/>

    <VBox spacing="10">
        <Label text="Total Capital" styleClass="finance-total-title"/>
        <Label fx:id="labelCapital" styleClass="finance-total-value"/>
    </VBox>

</VBox>
