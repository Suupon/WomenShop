<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="app.controller.TransactionsController"
      spacing="15" prefWidth="900" prefHeight="600">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Transactions History"
           style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <TableView fx:id="transactionsTable" VBox.vgrow="ALWAYS">

        <columns>
            <TableColumn text="ID" fx:id="colId" prefWidth="60"/>
            <TableColumn text="Product ID" fx:id="colProductId" prefWidth="90"/>
            <TableColumn text="Category" fx:id="colCategory" prefWidth="140"/>
            <TableColumn text="Type" fx:id="colType" prefWidth="100"/>
            <TableColumn text="Qty" fx:id="colQty" prefWidth="60"/>
            <TableColumn text="Unit Price (€)" fx:id="colUnitPrice" prefWidth="120"/>
            <TableColumn text="Total (€)" fx:id="colTotal" prefWidth="120"/>
            <TableColumn text="Date" fx:id="colDate" prefWidth="170"/>
        </columns>

    </TableView>

</VBox>
